<!doctype html>
<html lang="en">
    <head>
        <title>{{ title }}</title>
    </head>
    <body>
        <h1>Rehabilitate</h1>
		
		<!-- error message-->
		{{#message}}
      		<p>{{message}}<p>
    	{{/message}}
		
		<!-- settings -->
        <form action='/contact' method='post'>
		  <input type='name' name='name' placeholder='Someone you love'>
		  <input type='tel' name='phone' pattern='\d{3}-\d{3}-\d{4}' placeholder='123-456-7890'>
		  <input type='submit' value="Let's rehabilitate!">
		</form>
         <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    </body>
</html>
