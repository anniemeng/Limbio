<!doctype html>
<html lang="en">
    <head>
        <title>{{ title }}</title>
    </head>
    <body>
        <h1>Rehabilitate</h1>
		
		<!-- error message-->
		{{#message}}
      		<p>{{message}}<p>
    	{{/message}}
		
		<!-- settings -->
        <form action='/set' method='post'>
			<select name="type">
				<option value="arm-up">Arm-up</option>
			    <option value="arm-side">Arm-down</option>
			</select>
		  <input type='number' name='sets' placeholder='# of sets'>
		  <input type='number' name='reps' placeholder='# of reps'>
		  <input type='time' name='time' placeholder='time to do it'>
		  <input type='submit' value="Almost ready!">
		</form>
         <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    </body>
</html>
